{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "removeComments": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "*"
            ],
            "@/config/*": [
                "config/*"
            ],
            "@/middleware/*": [
                "middleware/*"
            ],
            "@/modules/*": [
                "modules/*"
            ],
            "@/routes/*": [
                "routes/*"
            ],
            "@/types/*": [
                "types/*"
            ],
            "@/modules/auth/*": [
                "modules/auth/*"
            ],
            "@/modules/user/*": [
                "modules/user/*"
            ],
            "@/modules/product/*": [
                "modules/product/*"
            ],
            "@/modules/cart/*": [
                "modules/cart/*"
            ],
            "@/modules/order/*": [
                "modules/order/*"
            ],
            "@/modules/payment/*": [
                "modules/payment/*"
            ],
            "@/modules/review/*": [
                "modules/review/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}